
<h1>Rounds</h1>
<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Matches</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rounds.each do |round| %>
      
        <tr>
          <td><%= round.number %></td>
          <td><%= round.matches.count %></td>
          <td><%= link_to 'Show', round_path(id:round.id) , class: 'btn btn-primary'%></td>
          <td><%= link_to 'Edit', edit_round_path(id:round.id), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', round_path(id:round.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    
  </tbody>
</table>

<br>

<%= link_to 'New Round', new_tournament_round_path(tournament_id:@tournament.id), class: 'btn btn-primary' %>
